<div class="d-flex justify-content-center px-2">
  <div class="container-fluid">
    <div class="row">
      <%# left side comprising of chat and spotify %>
      <div class="col-4 left-column gap-3 border">
        <%# chatbot %>
        <div class="left-wrapper d-flex flex-column align-items-center">
          <div class=" d-flex justify-content-around row chat-wrapper">
            <div class="chatbot">
              <small>
                <strong>Alexis</strong>
                <i>15 January 2024</i>
              </small>
              <p>Yo What's up</p>
            </div>
            <div class="home-icons col-1 d-flex flex-column justify-content-end fs-3">
            <p><i class="fa-regular fa-calendar"></i></p>
            <p><i class="fa-regular fa-calendar"></i></p>
            <p><i class="fa-regular fa-calendar"></i></p>
            </div>
          </div>
