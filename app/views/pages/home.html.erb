            <p>now playing</p>
          </div>
        </div>
      </div>

      <%# <div class="col-1">
      </div> %>

      <%# right side for tasks cards %>
      <div class="col-8 px-5 border border-success">
        <div class="row">
          <%# individual cards %>
          <%# .each goes here %>
        <%= render 'tasks/index', tasks: @tasks %>
        </div>
      </div>


    </div>
  </div>
</div>
